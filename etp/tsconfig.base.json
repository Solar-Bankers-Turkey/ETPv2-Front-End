{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@store/*": [
        "app/store/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@directives/*": [
        "app/directives/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}